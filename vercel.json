{
  "version": 2,
  "installCommand": "corepack enable && pnpm install --frozen-lockfile",
  "buildCommand": "pnpm --filter backend build && pnpm --filter mobile build",
  "outputDirectory": "apps/mobile/dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "/apps/backend/dist/index.js" },
    { "src": "/(.*)", "dest": "/apps/mobile/dist/$1" }
  ]
}
